<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFCE6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#303034"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="166dp"
        android:layout_height="56dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Adicionar"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imgDetalhe"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/batata_frita" />

    <TextView
        android:id="@+id/txtTitleDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="FeijÃ£o"
        android:textColor="#303034"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDetalhe" />

    <TextView
        android:id="@+id/txtDescricaoDetalhe"
        android:layout_width="251dp"
        android:layout_height="105dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="92dp"
        android:maxLines="4"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque non."
        android:textColor="#303034"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDetalhe" />

    <TextView
        android:id="@+id/txtContador"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="#FFF"
        android:text="0"
        android:textColor="#000"
        android:maxLines="1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingTop="4.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAdicionar"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3" />

    <ImageButton
        android:id="@+id/btnAcrescentar"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:background="#303034"
        android:onClick="acrescentarItem"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintStart_toEndOf="@+id/txtContador"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:srcCompat="@drawable/ic_icone_mais"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <ImageButton
        android:id="@+id/btnDiminuir"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#303034"
        android:onClick="removerItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtContador"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:srcCompat="@drawable/ic_icone_menos"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>